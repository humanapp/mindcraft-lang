{
  "name": "silly-walk-simulator",
  "description": "Silly Walk Simulator -- Mindcraft meets Monty Python",
  "version": "0.1.0",
  "type": "module",
  "author": "humanapp",
  "license": "MIT",
  "scripts": {
    "dev": "vite --config vite/config.dev.mjs --force",
    "build": "vite build --config vite/config.prod.mjs",
    "clean": "rm -rf dist && rm -rf node_modules/.vite",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint ./src --write",
    "format": "biome format ./src --write",
    "format:check": "biome format ./src",
    "check": "biome check ./src",
    "check:fix": "biome check ./src --write",
    "test:harness": "tsx -r tsconfig-paths/register src/test/headless-harness.ts",
    "test:harness:yaw": "tsx -r tsconfig-paths/register src/test/headless-harness.ts --yaw"
  },
  "dependencies": {
    "@react-three/drei": "^10.0.0",
    "@react-three/fiber": "^9.1.2",
    "@react-three/rapier": "^2.2.0",
    "leva": "^0.10.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "three": "^0.175.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/three": "^0.175.0",
    "@vitejs/plugin-react": "^4.3.4",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "~5.7.2",
    "vite": "^6.3.1"
  }
}
