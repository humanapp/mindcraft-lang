{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "outDir": "./dist/esm",
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "preserveSymlinks": true
  },
  "include": ["src"],
  "exclude": ["**/*.rbx.ts", "**/*.spec.ts", "dist/**", "out/**"]
}
