{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "outDir": "./dist/rbx",
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "noLib": true,
    "moduleDetection": "force",
    "typeRoots": ["./node_modules/@rbxts", "./node_modules/@marsraptor"],
    "preserveSymlinks": true
  },
  "include": ["src"],
  "exclude": ["**/*.node.ts", "**/*.spec.ts", "dist/**", "out/**"]
}
